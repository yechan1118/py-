a = 9
b = 2
print("a//b의  결과값:",a//b)
print("-a//b의 결과값:",-a//b)

print("My name's Lee Ye Chan")
c = "My name is Lee Ye Chan"
print(c.count('s'))

d = "Bythom Programing"
print(d[:0] + 'P' + d[1:]  , d[:5] + 'n' + d[6:])

