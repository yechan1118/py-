print(e.upper())

f = "i like IHTC"
print(f.replace("like" , "love"))

g = "20250401Monday"
year = g[:4]
print(year)
month = g[4:6]
print(month)
day = g[6:8]
print(day)
week = g[8:]
print(week)
print(year+'년 '+month+'월 '+day+'일 '+week)





